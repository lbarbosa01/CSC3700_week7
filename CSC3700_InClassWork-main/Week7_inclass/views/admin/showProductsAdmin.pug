include ../layouts/layoutBS
.container
    h1.mt-4
    h1.mt-4 #{title}
    p Admin Side

    if products.length == 0
        h2 Sorry no current products
    else
        table.table.table-striped
            thead
                tr
                    th(scope='col') Title
                    th(scope='col') Author
                    th(scope='col') Price
            tbody
                - let ct = 0
                each p in products
                    tr
                       td= p.title
                       td= p.author
                       td= p.price
                       td
                            form(method='get' action='editItem/' + ct)
                                button(type='submit' class='btn btn-primary') Edit
                       td
                            form(method='get' action='deleteItem/' + ct)
                                button(type='submit' class='btn btn-primary') Delete
                    - ct++

